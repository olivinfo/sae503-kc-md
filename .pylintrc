[MASTER]

# Spécifie le chemin des modules à analyser (par défaut, le répertoire courant)
load-plugins=
    pylint.extensions.docparams,
    pylint.extensions.bad_builtin,
    pylint.extensions.docstyle

# Désactive certains messages
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    W0511,  # todo items
    R0901,  # too-many-ancestors
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    R0915,  # too-many-statements
    R1705,  # no-else-return (inutiles selon le contexte)
    W0613,  # unused-argument
    E0401,  # import-error (utile si vous avez des imports dynamiques ou spécifiques)

# Active certains messages
enable=

fail-under=8.0

# Fichiers ou répertoires à ignorer
ignore=
    migrations,
    tests,
    venv,
    .venv,
    env,
    .git

# Chemin vers un fichier RC personnalisé
rcfile=

# Longueur maximale d'une ligne
max-line-length=100

[MESSAGES CONTROL]

# Désactive tous les messages, puis réactive certains
disable=all
enable=
    F,  # erreurs fatales
    E,  # erreurs
    W,  # avertissements
    C,  # conventions
    R,  # refactoring
    I,  # informations

[FORMAT]

# Format des messages
max-line-length=100

# Encodage des fichiers
file-encoding=utf-8

[BASIC]

# Style de nommage des variables et fonctions
variable-rgx=[a-z_][a-z0-9_]{0,30}$
attr-rgx=[a-z_][a-z0-9_]{0,30}$
argument-rgx=[a-z_][a-z0-9_]{0,30}$
function-rgx=[a-z_][a-z0-9_]{0,30}$
method-rgx=[a-z_][a-z0-9_]{0,30}$
class-rgx=[A-Z_][a-zA-Z0-9]+$
module-rgx=(([a-zA-Z_][a-zA-Z0-9_]*)|([a-zA-Z_][a-zA-Z0-9_]*))$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
inlinevar-rgx=[A-Za-z_][A-Za-z0-9_]*
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]*)|(__.*__)
class-const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

# Docstrings
docstring-min-length=-1

[TYPECHECK]

# Vérification des annotations de type
ignored-modules=
ignored-classes=
ignored-functions=

[VARIABLES]

# Variables considérées comme des constantes
additional-builtins=

# Variables globales autorisées
allowed-globals=

[CLASSES]

# Vérification des méthodes magiques
defining-attr-methods=
    __init__,
    __new__,
    setUp,
    __post_init__

# Vérification des méthodes de classe
valid-classmethod-first-arg=cls
valid-metaclass-classmethod-first-arg=mcs

[DESIGN]

# Nombre maximal d'arguments pour les fonctions/méthodes
max-args=8

# Nombre maximal de variables locales
max-locals=20

# Nombre maximal de branches
max-branches=15

# Nombre maximal de returns
max-returns=8

# Nombre maximal de statements
max-statements=60

# Nombre maximal de parents pour une classe
max-parents=8

# Nombre maximal de méthodes publiques pour une classe
max-public-methods=25

# Nombre minimal de méthodes publiques pour une classe
min-public-methods=2

[IMPORTS]

# Vérification des imports
deprecated-modules=
